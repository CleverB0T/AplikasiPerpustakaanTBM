<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/kategoriFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.KategoriFragment"
        android:label="fragment_kategori"
        tools:layout="@layout/fragment_kategori" />
    <fragment
        android:id="@+id/reminderFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.ReminderFragment"
        android:label="fragment_reminder"
        tools:layout="@layout/fragment_reminder" />
    <fragment
        android:id="@+id/laporanFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.LaporanFragment"
        android:label="fragment_laporan"
        tools:layout="@layout/fragment_laporan" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_userFragment_to_addAdminFragment"
            app:destination="@id/addAdminFragment" />
        <action
            android:id="@+id/action_userFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_userFragment_to_editAdminFragment"
            app:destination="@id/editAdminFragment" />
        <action
            android:id="@+id/action_userFragment_to_splashFragment"
            app:destination="@id/splashFragment" />
        <action
            android:id="@+id/action_userFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAdminFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.AddAdminFragment"
        android:label="fragment_add_admin"
        tools:layout="@layout/fragment_add_admin" >
        <action
            android:id="@+id/action_addAdminFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/editAdminFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.EditAdminFragment"
        android:label="fragment_edit_admin"
        tools:layout="@layout/fragment_edit_admin" >
        <action
            android:id="@+id/action_editAdminFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.learn.android.aplikasiperpustakaantbm.AddBookFragment"
        android:label="fragment_add_book"
        tools:layout="@layout/fragment_add_book" />
</navigation>